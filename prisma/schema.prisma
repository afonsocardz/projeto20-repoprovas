// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  password String
  @@map("users")
}

model Test {
  id Int @id @default(autoincrement())
  name String
  pdfUrl String
  categoryId Int
  teacherDisciplineId Int
  @@map("tests")
}

model Category {
  id Int @id @default(autoincrement())
  name String @unique
  @@map("categories")
}

model Teacher {
  id Int @id @default(autoincrement())
  name String @unique
  teacherDisciplines TeacherDiscipline[]
  @@map("teachers")
}

model Term{
  id Int @id @default(autoincrement())
  number Int @unique
  disciplines Discipline[]
  @@map("terms")
}

model Discipline {
  id Int @id @default(autoincrement())
  name String @unique
  terms Term @relation(fields: [termId], references: [id])
  termId Int 
  disciplinesTeacher TeacherDiscipline[]
  @@map("disciplines")
}

model TeacherDiscipline {
  id Int @id @default(autoincrement())
  teachers Teacher @relation(fields: [teacherId], references: [id])
  teacherId Int
  disciplines Discipline @relation(fields: [disciplineId], references: [id])
  disciplineId Int
  @@map("teacher_disciplines")
}